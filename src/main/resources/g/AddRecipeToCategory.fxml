<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="g.controller.AddRecipeToCategoryController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Select the category for the recipe" style="-fx-font-size: 16px;"/>
    <VBox fx:id="categoryCheckBoxContainer" spacing="8"/>
    <HBox spacing="10">
        <Button text="Confirm" onAction="#onConfirm"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>